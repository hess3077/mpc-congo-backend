{% extends 'master.twig' %}

{% block body %}
    <div class="container-fluid no-padding h-100">
        <div class="no-padding">
            <div class="col-xl-8 col-lg-6 col-md-5 no-padding">
                <div class="mpc-bg background-01">
                    <div class="mpc-overlay overlay-01"></div>
                    <div class="authentication-col-content mx-auto">
                        <h1 class="gradient-text-01">
                            Bienvenue sur MPC !
                        </h1>
                        <span class="description">
                            Plateforme d'administration du portail Mouvement Panafricain et Citoyen.
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-md-7 my-auto no-padding">
                {% if flash.message %}
                <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                    {{ flash.message }}
                </div>
                {% endif %}
                <div class="login-panel panel panel-default" style="margin-top:40px">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post" action="{{baseUrl()}}/login">
                            <input type="hidden" name="redirect" value="{{ flash.redirect ? : redirect}}">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus value="{{ flash.email }}">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me" {% if flash.remember %}checked{% endif %}>Remember Me
                                    </label>
                                </div>

                                <div class="form-group">
                                    <div class="col-xs-6 text-center">
                                        <button type="submit" class="btn btn-md btn-success btn-block">Login</button>
                                    </div>
                                    <div class="col-xs-6 text-center">
                                        <a href="{{siteUrl('/')}}" class="btn btn-md btn-danger btn-block">Cancel</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}