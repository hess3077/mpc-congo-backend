{% extends 'master.twig' %}

{% block body %}
    <div class="container-fluid no-padding h-100">
        <div class="no-padding">
            <div class="col-xl-8 col-lg-8 col-md-5 no-padding">
                <div class="mpc-bg background-01">
                    <div class="mpc-overlay overlay-01"></div>
                    <div class="authentication-col-content mx-auto">
                        <h1 class="gradient-text-01">
                            Bienvenue sur MPC !
                        </h1>
                        <span class="description">
                            Plateforme d'administration du portail Mouvement Panafricain et Citoyen. En accédant à cet espace, vous allez administrer le site <a href="https://mpc-congo.com/" target="__blank">https://mpc-congo.com/</a>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4 col-md-7 my-auto no-padding">
                <div class="authentication-form mx-auto">
                    <div class="logo-centered text-center">
                        <h1 class="gradient-text-01" style="font-size: 4rem; font-weight: bolder; color: #18a689;">mpc-congo</h1>
                    </div>
                
                    {% if flash.message %}
                    <div class="alert alert-danger alert-dismissable" style="margin-top: 25px">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{ flash.message }}
                    </div>
                    {% endif %}
                    
                    <div class="login-panel" style="margin-top:40px">
                    <div class="panel-body">
                        <form role="form" method="post" action="login">
                            <input type="hidden" name="redirect" value="{{ flash.redirect ? : redirect}}">
                            <fieldset>
                                <div class="form-group material-input">
                                    <input placeholder="Email de connexion" name="email" type="email" autofocus value="{{ flash.email }}">
                                </div>
                                <div class="form-group material-input">
                                    <input placeholder="Mot de passe" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me" {% if flash.remember %}checked{% endif %}>Rester conneté
                                    </label>
                                </div>

                                <div class="form-group">
                                    <div class="col-xs-6 text-center">
                                        <button type="submit" class="btn btn-md btn-success btn-block">connexion</button>
                                    </div>
                                    <div class="col-xs-6 text-center">
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}